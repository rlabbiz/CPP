C++			= c++
FLAGS		= -Wall -Wextra -Werror -std=c++98
NAME		= btc
DFS			= BitcoinExchange.hpp
OBJ			= main.o BitcoinExchange.o

%.o: %.cpp $(DFS)
	$(C++) $(FLAGS) -c $< -o $@

all : $(NAME)

$(NAME): $(OBJ) $(DFS)
	$(C++) $(OBJ) -o $(NAME)

clean:
	rm -rf $(OBJ)

fclean: clean
	rm -rf $(NAME)

re: fclean all